{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    // --- ADDED/UPDATED LINES BELOW ---
    "baseUrl": ".", // It's good practice to have this when using paths
    "typeRoots": ["./node_modules/@types", "./types"] // Tell TypeScript to look for types in ./types
    // --- END ADDED/UPDATED LINES ---
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts" // <-- This line explicitly includes your custom type declarations
  ],
  "exclude": ["node_modules"]
}